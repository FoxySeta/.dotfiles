# Buttons
set $mod Mod4
set $left h
set $down j
set $up k
set $right l

# Your preferred terminal emulator
set $term wezterm

# Colors
set $opacity 0.5
set $menu wofi -c ~/.config/wofi/config | xargs swaymsg exec --

# Outputs
set $output-primary HDMI-A-2
set $output-secondary eDP-1

# Configuration files
include config.d/*
include /etc/sway/config.d/*
